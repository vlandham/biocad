<h2 class="title"><%= @gene.gene_symbol %></h2>
<div class="info">
  <h2 id="general-info">General Information</h2>

    <h3>Swissprot:</h3>
    <p><%= @gene.swissprot  || 'unknown'%></p>
  
    <h3>Genebank:</h3>
    <p><%= @gene.genebank || 'unknown' %></p>

    <h3>Omim:</h3>
    <p><%= @gene.omim  || 'unknown'%></p>
  
    <h3>Entrez:</h3>
    <p><%= @gene.entrez  || 'unknown' %></p>
  
    <h3>Orf:</h3>
    <p><%= @gene.orf  || 'unknown' %></p>

  <h2>Related Cancers:</h2>
  <h3>Onco</h3>
  <% unless @gene.onco_cancers.empty? %>
    <div class="center">
      <%= render :partial => 'cancers/cancer', :collection => @gene.onco_cancers %>
    </div>
  <% else %>
    <p class="quiet">none</p>
  <% end %>
  
  <div class="clearbox">
    
  </div>
  <h3>Suppressed</h3>
  
  <% unless @gene.suppressed_cancers.empty? %>
    <div class="center">
      <%= render :partial => 'cancers/cancer', :collection => @gene.suppressed_cancers %>
    </div>
   <% else %>
    <p class="quiet">none</p>
  <% end %>

  
  <div class="clearbox">  
  </div>
  <h2>Interactions:</h2>
  <% unless @gene.gene_interactions.empty? %>
  <ul>
    <% @gene.gene_interactions.each do |interacting_gene| %>
    <% interaction = interacting_gene.interactions.find_by_gene_id(@gene.id) || interacting_gene.interactions.find_by_gene_id_target(@gene.id) %>
      <li><%= link_to interacting_gene.gene_symbol, gene_path(interacting_gene) %> -- <%= link_to interaction.source, interaction_path(interaction) if interaction  %></li>
    <% end %>
  </ul>
  <% else %>
    <p class="quiet">none</p>
  <% end %>
  <h2>Transcription Factors:</h2>
  <% unless @gene.gene_transcription_factors.empty? %>
    <div class="center">
      <%= render :partial => 'cancers/cancer', :collection => @gene.gene_transcription_factors %>
    </div>
  <% else %>
    <p class='quiet'>none</p>
  <% end %>
  <div class="clearbox">
    
  </div>
</div>
<%= link_to 'All Genes', genes_path %>   <%= link_to 'Edit', edit_gene_path(@gene) if logged_in? %>


