<h2 id="gene-name"><%= @gene.gene_symbol %></h2>
<div class="gene">
  <h2 id="general-info">General Information</h2>
  <div class="content">
  
    <h3>Swissprot:</h3>
    <p><%=h @gene.swissprot %></p>
  
    <h3>Genebank:</h3>
    <p><%=h @gene.genebank %></p>

    <h3>Omim:</h3>
    <p><%=h @gene.omim %></p>
  
    <h3>Entrez:</h3>
    <p><%=h @gene.entrez %></p>
  
    <h3>Orf:</h3>
    <p><%=h @gene.orf %></p>

  <h2>Interactions:</h2>
  <ul>
    <% @gene.gene_interactions.each do |interacting_gene| %>
    <% interaction = interacting_gene.interactions.find_by_gene_id(@gene.id) || interacting_gene.interactions.find_by_gene_id_target(@gene.id) %>
      <li><%= link_to interacting_gene.gene_symbol, gene_path(interacting_gene) %> -- <%= link_to interaction.source, interaction_path(interaction) if interaction  %></li>
    <% end %>
  </ul>

  <h2>Related Cancers:</h2>
  <div class="center">
    <% @gene.cancers.each do |cancer| %>
      <div class="cancer-box">
        <%= link_to cancer, cancer %>
      </div>
    <% end %>
  </div>
  
  <div class="clearbox">  
  </div>
  
</div>

<%= link_to 'Edit', edit_gene_path(@gene) %> |
<%= link_to 'Back', genes_path %>
