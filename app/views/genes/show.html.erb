<% content_for :head do %>
  <script type="text/javascript" src="/javascripts/swfobject.js"></script>
  <script type="text/javascript">
  	var flashvars = {};
  	flashvars.controller = "genes";
    flashvars.value_id = <%= @gene.id %>;
  	var params = {};
  	var attributes = {};
  	swfobject.embedSWF("/flash/gene_interactions.swf", "flash-alt", "300", "300", "9.0.0", false, flashvars, params, attributes);
  </script>
 <% end %>


<h2 class="title"><%= @gene.gene_symbol %></h2>
<div class="info">
  <h2 id="general-info">General Information</h2>

    <h3>Swissprot:</h3>
    <p><%= @gene.swissprot  || 'unknown'%></p>
  
    <h3>Genebank:</h3>
    <p><%= @gene.genebank || 'unknown' %></p>

    <h3>Omim:</h3>
    <p><%= @gene.omim  || 'unknown'%></p>
  
    <h3>Entrez:</h3>
    <p><%= @gene.entrez  || 'unknown' %></p>
  
    <h3>Orf:</h3>
    <p><%= @gene.orf  || 'unknown' %></p>

  <h2>Related Cancers:</h2>
  <h3>Onco</h3>
  <% unless @gene.onco_cancers.empty? %>
    <div class="center">
      <%= render :partial => 'cancers/cancer', :collection => @gene.onco_cancers %>
    </div>
  <% else %>
    <p class="quiet">none</p>
  <% end %>
  
  <div class="clearbox">
    
  </div>
  <h3>Suppressed</h3>
  
  <% unless @gene.suppressed_cancers.empty? %>
    <div class="center">
      <%= render :partial => 'cancers/cancer', :collection => @gene.suppressed_cancers %>
    </div>
   <% else %>
    <p class="quiet">none</p>
  <% end %>

  
  <div class="clearbox">  
  </div>
  <h2>Interactions:</h2>
  <% unless @gene.gene_interactions.empty? %>
  <div class="center">
    <%= render :partial => 'genes/gene', :collection => @gene.gene_interactions %>
  </div>
  <% else %>
    <p class="quiet">none</p>
  <% end %>
  <div class="clearbox">
    
  </div>
  
  <h2>Transcription Factors:</h2>
  <% unless @gene.gene_transcription_factors.empty? %>
    <div class="center">
      <%= render :partial => 'genes/gene', :collection => @gene.gene_transcription_factors %>
    </div>
  <% else %>
    <p class='quiet'>none</p>
  <% end %>
  <div class="clearbox">
  </div>
  <div id="flash-alt">
		<a href="http://www.adobe.com/go/getflashplayer">
			<img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="Get Adobe Flash player" />
		</a>
	</div>
</div>
<%= link_to 'All Genes', genes_path %>   <%= link_to 'Edit', edit_gene_path(@gene) if logged_in? %>


